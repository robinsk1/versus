= form_for @opponent do |f|
  - if @opponent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@opponent.errors.count, "error")} prohibited this opponent from being saved:"
      %ul
        - @opponent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
